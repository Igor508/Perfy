<div data-login-form>

    {% form 'customer_login', class: 'customer--login' %}
        <h1 class="h2 font-heading font-bold text-center">{{ 'customer.login.title' | t }}</h1>

        {{ form.errors | default_errors }}

        <div class="mt-4">

        <label class="form-label" for="CustomerEmail">
            {{ 'customer.login.email' | t }}
        </label>

        <input
            type="email"
            name="customer[email]"
            id="CustomerEmail"
            class="form-control {% if form.errors contains 'email' %}input-error{% endif %}"
            spellcheck="false"
            autocomplete="off"
            autocapitalize="off"
            autofocus
        >
        </div>

        {% if form.password_needed %}
            <div class="mt-4">
                <label class="form-label" for="CustomerPassword">
                {{ 'customer.login.password' | t }}
                </label>
                <input
                type="password"
                name="customer[password]"
                id="CustomerPassword"
                class="form-control {% if form.errors contains 'password' %}input-error{% endif %}"
                >
            </div>
        {% endif %}

        <div class="row sm:flex-row-reverse justify-end items-center mt-6">
            <div class="col w-full sm:w-1/2">
                <button type="submit" class="btn btn-primary-dark block w-full max-w-sm mx-auto font-semibold hover:btn-with-inset-border">
                    {{ 'customer.login.sign_in' | t }}
                </button>
            </div>

            <div class="col w-full sm:w-1/2 mt-6 sm:mt-0 text-center">

                {% if form.password_needed %}
                    <a class="underline hover:no-underline focus:no-underline" href="#recover" data-recover-toggle>{{ 'customer.login.forgot_password' | t }}</a>
                {% endif %}
            </div>
        </div>

        <div class="flex items-center justify-center space-x-4 my-8">
            <a href="{{ routes.account_register_url }}" class="btn-text-sm">Create an account</a>
        </div>
    {% endform %}

</div>
