<div class="shopify-section">

  <div class="container">
    <div class="row my-8">
    
      <div class="col w-full">
        <h1 class="font-heading h2 text-center">{{ 'customer.account.title' | t }}</h1>

        <div class="flex justify-center space-x-4 text-center">
          <!-- Begin ReCharge code -->
          <p id="rc_link_container">
            <a href="/tools/recurring/login" class="text-base underline hover:no-underline">Manage Subscriptions</a>
          </p>
          <!-- End ReCharge code -->

          <a href="{{ routes.account_logout_url }}" class="inline-block text-base underline hover:no-underline">
            <div class="inline-block align-middle w-4 h-4 mr-2">
              <svg xmlns="http://www.w3.org/2000/svg" aria-hidden="true" focusable="false" fill="none" viewBox="0 0 18 19">
                <path fill-rule="evenodd" clip-rule="evenodd" d="M6 4.5a3 3 0 116 0 3 3 0 01-6 0zm3-4a4 4 0 100 8 4 4 0 000-8zm5.58 12.15c1.12.82 1.83 2.24 1.91 4.85H1.51c.08-2.6.79-4.03 1.9-4.85C4.66 11.75 6.5 11.5 9 11.5s4.35.26 5.58 1.15zM9 10.5c-2.5 0-4.65.24-6.17 1.35C1.27 12.98.5 14.93.5 18v.5h17V18c0-3.07-.77-5.02-2.33-6.15-1.52-1.1-3.67-1.35-6.17-1.35z" fill="currentColor">
              </svg>
            </div><div class="inline-block align-middle">
              {{- 'customer.log_out' | t }}
            </div>
          </a>
        </div>
      </div>
      
    </div>

    <div class="row justify-between">


      <div class="col w-full md:w-2/3 xl:w-3/4">
        <h2 class="h4 mb-4">{{ 'customer.orders.title' | t }}</h2>

        {% render 'account-orders' %}
      </div>

      <div class="col w-full md:w-1/3 xl:w-1/4">
        <h2 class="h4">{{ 'customer.account.details' | t }}</h2>

        {{ customer.default_address | format_address }}

        <a href="{{ routes.account_addresses_url }}" class="underline hover:no-underline focus-visible:no-underline inline-block mt-4">
          {{ 'customer.account.view_addresses' | t }} ({{ customer.addresses_count }})
        </a>
      </div>

    </div>
    {% comment %} // .row {% endcomment %}

  </div>
  {% comment %} // .container {% endcomment %}

</div>
{% comment %} // .shopify-section {% endcomment %}