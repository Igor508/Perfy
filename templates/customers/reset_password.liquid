<div class="container py-8 lg:py-16">
  <div class="row">
    <div class="col w-full md:w-2/3">
  <div class="form-reset-password">
  {% form 'reset_customer_password' %}

    <h1>{{ 'customer.reset_password.title' | t }}</h1>

    <p>{{ 'customer.reset_password.subtext' | t: email: email }}</p>

    {{ form.errors | default_errors }}

    <div class="mt-4">
      <label for="ResetPassword" class="form-label">
        {{ 'customer.reset_password.password' | t }}
      </label>
      <input type="password"
        name="customer[password]"
        id="ResetPassword"
        required
        class="form-control {% if form.errors contains 'password' %}input-error{% endif %}"
        {% comment %} placeholder="{{ 'customer.reset_password.password' | t }}" {% endcomment %}
        >
    </div>

    <div class="mt-4">
      <label for="PasswordConfirmation" class="form-label">
        {{ 'customer.reset_password.password_confirm' | t }}
      </label>
      <input type="password"
        name="customer[password_confirmation]"
        required
        id="PasswordConfirmation"
        class="form-control {% if form.errors contains 'password_confirmation' %}input-error{% endif %}"
        {% comment %} placeholder="{{ 'customer.reset_password.password_confirm' | t }}" {% endcomment %}
        >
    </div>

    <input type="submit" class="button btn btn-primary mt-4" value="{{ 'customer.reset_password.submit' | t }}">
  {% endform %}
  </div>
  </div>
  </div>
</div>
