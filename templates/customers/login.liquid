<div class="shopify-section relative z-10">

  <div class="container py-8 lg:py-16">
    <div class="row justify-center">

      <div class="col w-full md:w-1/2">

        <div class="form-success hidden" data-reset-success>
          {{ 'customer.recover_password.success' | t }}
        </div>

        {% render 'form--recover-password' %}

        {% render 'form--login' %}

        {% render 'subscription-account-login' %}

      </div>
      {% comment %} // .col {% endcomment %}

      {% if shop.checkout.guest_login %}
        <h2>{{ 'customer.login.guest_title' | t }}</h2>

        {% form 'guest_login' %}
          <input type="submit" class="button" value="{{ 'customer.login.guest_continue' | t }}">
        {% endform %}
      {% endif %}

    </div>
    {% comment %} // .row {% endcomment %}

  </div>
  {% comment %} // .container {% endcomment %}

</div>
{% comment %} // .shopify-section {% endcomment %}

<img
  class="absolute inset-x-0 top-1/2 mt-24 transform -translate-y-1/2 hidden md:block z-0 pointer-events-none lazyload object-center object-cover"
  src="{{ 'bg-login.png' | asset_url }}"
  alt="Log-in background"
  loading="lazy"
  width="2880"
  height="1800"
  aria-hidden="true"
  role="presentation"
>