<div class="container py-12 md:py-20{% if section.settings.extra_top_padding %} pt-16 md:pt-32{% endif %}{% if section.settings.extra_bottom_padding %} pb-16 md:pb-36{% endif %}">
  {% if section.settings.title != blank %}
    <h2 class="font-heading h2 font-bold text-purple-dark text-center pb-12 md:pb-16">{{ section.settings.title }}</h2>
  {% endif %}
  {% if section.blocks.size > 0 %}
    <div class="row justify-center">
    {% for block in section.blocks %}
      <div class="col w-1/3 lg:w-1/6">
        {% if block.settings.image != blank %}
          <img
            src="{{ block.settings.image | image_url: height: 96 }}"
            srcset="{% render 'srcset', image: block.settings.image %}"
            class="icon-block mb-6 mx-auto object-contain w-24 p-1 h-24"
            alt="{{ block.settings.title }}"
            width="{{ block.settings.image.width }}"
            height="{{ block.settings.image.height }}"
            loading="lazy"
          />
        {% endif %}
        {% if block.settings.title != blank %}
          <h5 class="font-sans font-bold text-center text-purple-dark">{{ block.settings.title }}</h5>
        {% endif %}
      </div>
    {% endfor %}
    </div>
  {% endif %}
</div>

{% schema %}
{
  "name": "Icons",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "default": "What Makes Us Perfy?",
      "label": "Section Title"
    },
    {
      "type": "checkbox",
      "id": "extra_top_padding",
      "label": "Extra Top Padding"
    },
    {
      "type": "checkbox",
      "id": "extra_bottom_padding",
      "label": "Extra Bottom Padding"
    }
  ],
  "blocks": [
    {
      "type": "icon",
      "name": "Icon",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Icon Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Icons",
      "blocks": [
        {
          "type": "icon"
        },
        {
          "type": "icon"
        },
        {
          "type": "icon"
        },
        {
          "type": "icon"
        },
        {
          "type": "icon"
        },
        {
          "type": "icon"
        }
      ]
    }
  ]
}
{% endschema %}